        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/buttonM"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.166"
                android:text="M"/>

            <Button
                android:id="@+id/buttonN"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.166"
