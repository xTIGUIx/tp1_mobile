        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/buttonG"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.166"
                android:text="G"/>
            <Button
                android:id="@+id/buttonH"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.166"
                android:text="H"/>
            <Button
                android:id="@+id/buttonI"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.166"
